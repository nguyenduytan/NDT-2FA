{
  "name": "ndtan/php-2fa",
  "description": "NDT 2FA \u2014 TOTP (RFC 6238) for PHP with backup codes, otpauth URIs, and QR generation (SVG). Laravel & Symfony integrations included.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Tony Nguyen",
      "email": "admin@ndtan.net",
      "homepage": "https://nguyenduytan.com"
    }
  ],
  "keywords": [
    "php",
    "2fa",
    "totp",
    "rfc6238",
    "backup codes",
    "qr",
    "otpauth",
    "laravel",
    "symfony",
    "ndtan"
  ],
  "support": {
    "issues": "https://github.com/nguyenduytan/php-2fa/issues",
    "source": "https://github.com/nguyenduytan/php-2fa"
  },
  "require": {
    "php": ">=8.1",
    "endroid/qr-code": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "ndtan\\TwoFA\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "ndtan\\TwoFA\\Laravel\\NdtTwoFaServiceProvider"
      ]
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "test": "phpunit --testdox"
  }
}